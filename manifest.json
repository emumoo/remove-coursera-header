{

  "description": "Adds an option to remove the header from Coursera pages.",
  "manifest_version": 2,
  "name": "remove-coursera-header",
  "version": "1.1",
  "homepage_url": "https://github.com/emumoo/remove-coursera-header",

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": "icons/off.svg",
    "browser_style": true
  },
  
  "permissions": [
    "activeTab",
    "tabs"
  ]

}
